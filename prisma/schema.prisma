generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               Int            @id @default(autoincrement())
  email            String         @unique
  password         String
  name             String
  surname          String
  birthDate        DateTime
  matricola        String         @unique
  department       String
  degreeCourse     String
  isFuorisede      Boolean
  qrToken          String         @unique @default(uuid())
  createdAt        DateTime       @default(now())
  resetToken       String?        @unique
  resetTokenExpiry DateTime?
  newsletter       Boolean        @default(false)
  role             Role           @default(USER)
  association      Association    @default(MORGANA_ORUM)
  registrations    Registration[]
}

model Event {
  id             Int            @id @default(autoincrement())
  title          String
  description    String
  date           DateTime
  location       String
  image          String?
  category       String
  attachments    String?
  bookingEnd     DateTime?
  bookingOpen    Boolean        @default(true)
  bookingStart   DateTime?
  details        String?
  endDate        DateTime?
  cfuDepartments String?
  cfuType        String?
  cfuValue       String?
  published      Boolean        @default(true)
  association    Association    @default(MORGANA_ORUM)
  registrations  Registration[]

  @@index([date])
  @@index([category])
}

model Registration {
  id        Int      @id @default(autoincrement())
  userId    Int
  eventId   Int
  status    String   @default("REGISTERED")
  createdAt DateTime @default(now())
  event     Event    @relation(fields: [eventId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, eventId])
}

model Representative {
  id              String   @id @default(uuid())
  name            String
  listName        String
  category        String
  department      String?
  role            String?
  term            String   @default("2025-2027")
  image           String?
  email           String?
  phone           String?
  instagram       String?
  description     String?
  roleDescription String?
  association     Association @default(MORGANA_ORUM)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime @updatedAt
}

model News {
  id          String      @id @default(uuid())
  title       String
  description String
  content     String?
  category    String
  tags        String?
  image       String?
  date        DateTime    @default(now())
  published   Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  association Association @default(MORGANA_ORUM)

  @@index([date])
  @@index([category])
}

model Convention {
  id        String   @id @default(uuid())
  name      String
  category  String
  social    String?
  logo      String?
  website   String?
  location  String
  discounts String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([location])
  @@index([category])
}

model NewsCategory {
  id   String @id @default(uuid())
  name String @unique
}

model EventCategory {
  id   String @id @default(uuid())
  name String @unique
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  type      String
  link      String?
  createdAt DateTime @default(now())

  @@index([createdAt])
}

enum Role {
  USER
  ADMIN_NETWORK
  ADMIN_MORGANA
  SUPER_ADMIN
}

enum Association {
  MORGANA_ORUM
  UNIMHEALTH
  ECONOMIA
  SCIPOG
  DICAM
  MATRICOLE
  INSIDE_DICAM
}
